<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonHelpMenahalimVsKeren"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="עזרה" />

        <EditText
            android:id="@+id/editTextMonthSaving"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            
            android:hint=" הכנס סכום הפרשה חודשית לפנסיה"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/textViewKeren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center"
                android:text=" טור קרן פנסיה" />

            <TextView
                android:id="@+id/textViewMenahilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" טור ביטוח מנהלים" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <EditText
                android:id="@+id/editTextMonthCommissionKeren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=" הכנס דמי ניהול חודשיים "
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editTextMonthCommissionMenahilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=" הכנס דמי ניהול חודשיים "
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <EditText
                android:id="@+id/editTextYearCommissionKeren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=" הכנס דמי ניהול צבירה "
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editTextYearCommissionMenahilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=" הכנס דמי ניהול צבירה "
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <EditText
                android:id="@+id/editTextMekademKeren"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="הכנס מקדם משוער קרן פנסיה"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editTextMekademMenahilm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:hint="הכנס מקדם מובטח בביטוח מנהלים"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextNumberOfYears"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:hint="הכנס מספר שנים לפרישה"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonCalcMenahlimVsKeren"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="חשב" />
    </LinearLayout>

</ScrollView>